<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.extraditables.los.brokin.re_brokin.android.view.activities.ShareInfoActivity"
    >

  <android.support.v7.widget.CardView
      android:id="@+id/share_graphics"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      >

    <com.robinhood.spark.SparkView
        android:id="@+id/share_graphics_spark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:spark_lineColor="@color/cardview_dark_background"
        />

  </android.support.v7.widget.CardView>

</RelativeLayout>
